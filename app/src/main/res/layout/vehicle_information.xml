<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/vehicle_information_panel_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/choose_vehicle"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"
            android:src="@mipmap/choose_vehicle_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"
            android:text="选择车辆"
            android:textColor="@color/vehicle_information_choose_vehicle_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/vehicle_information_choose_vehicle_text_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_container"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_add_vehicle"
            android:clipChildren="false">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_choose_vehicle_list"
                android:layout_width="64dp"
                android:layout_height="@dimen/vehicle_information_viewpager_height"
                android:layout_centerInParent="true"
                android:layout_marginLeft="100dp"
                android:clipChildren="false" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_add_vehicle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/add_vehicle" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/vehicle_information_panel_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/vehicle_information_background"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"
            android:text="车辆信息"
            android:textColor="@color/vehicle_information_choose_vehicle_text_color"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/vehicle_information_choose_vehicle_text_color"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/vehicle_name"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="车辆名称："
                android:textColor="@color/information_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:textColor="@color/information_text_color"
                android:textSize="16sp"
                android:id="@+id/tv_vehicle_information_name"
                android:text="二手奥拓"
                android:layout_marginLeft="@dimen/four_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/vehicle_number"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="车牌号："
                android:textColor="@color/information_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:textColor="@color/information_text_color"
                android:textSize="16sp"
                android:id="@+id/tv_vehicle_information_number"
                android:text="渝B74110"
                android:layout_marginLeft="@dimen/three_word_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/gas_percent"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="汽油量："
                android:textColor="@color/information_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:textColor="@color/information_text_color"
                android:textSize="16sp"
                android:id="@+id/tv_vehicle_information_gas_percent"
                android:text="43%"
                android:layout_marginLeft="@dimen/three_word_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/vehicle_level"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="车身级别："
                android:textColor="@color/information_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:textColor="@color/information_text_color"
                android:textSize="16sp"
                android:id="@+id/tv_vehicle_information_level"
                android:text="四门四座"
                android:layout_marginLeft="@dimen/four_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/vehicle_mileage"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="里程数："
                android:textColor="@color/information_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:textColor="@color/information_text_color"
                android:textSize="16sp"
                android:id="@+id/tv_vehicle_information_mileage"
                android:text="121km"
                android:layout_marginLeft="@dimen/three_word_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/engine_version"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="发动机型号："
                android:textColor="@color/information_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:textColor="@color/information_text_color"
                android:textSize="16sp"
                android:id="@+id/tv_vehicle_information_engine_version"
                android:text="待定"
                android:layout_marginLeft="@dimen/five_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/engine_function"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="发动机性能："
                android:textColor="@color/information_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:textColor="@color/information_text_color"
                android:textSize="16sp"
                android:id="@+id/tv_vehicle_information_engine_function"
                android:text="121km"
                android:layout_marginLeft="@dimen/five_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/vehicle_speed_changer"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="变速器性能："
                android:textColor="@color/information_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:textColor="@color/information_text_color"
                android:textSize="16sp"
                android:id="@+id/tv_vehicle_information_speed_changer"
                android:text="异常"
                android:layout_marginLeft="@dimen/five_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/vehicle_light"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="车灯："
                android:textColor="@color/information_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:textColor="@color/information_text_color"
                android:textSize="16sp"
                android:id="@+id/tv_vehicle_information_engine_"
                android:text="好"
                android:layout_marginLeft="@dimen/two_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
