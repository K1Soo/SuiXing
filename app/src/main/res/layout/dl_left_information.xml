<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4EA2F8"
    android:orientation="vertical"
    android:id="@+id/ll_drawer_view"
    android:layout_gravity="start"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="32dp"
        android:id="@+id/ll_me"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="53dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/no_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dl_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_name"
                android:textColor="#ffffff"
                android:textSize="@dimen/drawer_layout_name" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/example_motto"
                android:textColor="#ffffff"
                android:textSize="@dimen/drawer_layout_motto"
                android:id="@+id/tv_motto" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingLeft="32dp"
        android:layout_marginTop="18dp"
        android:src="@mipmap/dl_blue_line" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_vehicle_information"
        android:background="?android:attr/selectableItemBackground"
        >
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="26dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/dl_vehicle_information" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/vehicle_information"
                android:textColor="#ffffff"
                android:textSize="@dimen/drawer_layout_text_size" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingLeft="32dp"
        android:id="@+id/ll_get_gas"
        android:background="?android:attr/selectableItemBackground"
        >
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="26dp">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/dl_get_gas" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/add_gas"
                android:textColor="#ffffff"
                android:textSize="@dimen/drawer_layout_text_size" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingLeft="32dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/dl_blue_line" />
    <LinearLayout
        android:id="@+id/ll_peccany"
        android:paddingLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="?android:attr/selectableItemBackground"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/dl_peccany" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/peccany"
                android:textColor="#ffffff"
                android:textSize="@dimen/drawer_layout_text_size" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:paddingLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@mipmap/dl_blue_line" />
    <LinearLayout
        android:paddingLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/ll_about_us"
        android:background="?android:attr/selectableItemBackground"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/dl_about_us" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/about_us"
                android:textColor="#ffffff"
                android:textSize="@dimen/drawer_layout_text_size" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/ll_back"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/dl_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/back"
                android:textColor="#ffffff"
                android:textSize="@dimen/drawer_layout_text_size" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
