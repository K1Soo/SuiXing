            <!--android:layout_marginLeft="25dp"-->
            <!--android:text="@string/navigation"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="@dimen/drawer_layout_text_size" />-->

    <!--</LinearLayout>-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="32dp"
        android:src="@mipmap/dl_blue_line" />

    <LinearLayout
        android:id="@+id/ll_peccany"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="32dp">


        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/dl_peccany" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/peccany"
            android:textColor="#ffffff"
            android:textSize="@dimen/drawer_layout_text_size" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingLeft="32dp"
        android:src="@mipmap/dl_blue_line" />

    <LinearLayout
        android:id="@+id/ll_about_us"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="32dp">


        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/dl_about_us" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/about_us"
            android:textColor="#ffffff"
            android:textSize="@dimen/drawer_layout_text_size" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="32dp">


        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/dl_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/back"
            android:textColor="#ffffff"
            android:textSize="@dimen/drawer_layout_text_size" />

    </LinearLayout>
</LinearLayout>
